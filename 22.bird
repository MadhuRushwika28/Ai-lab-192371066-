% Facts: bird(Name).
bird(sparrow).
bird(penguin).
bird(eagle).
bird(ostrich).
bird(parrot).

% Facts: can_fly(Bird).
can_fly(sparrow).
can_fly(eagle).
can_fly(parrot).

% Rule: bird_can_fly(Bird, yes/no)
bird_can_fly(Bird, yes) :-
    bird(Bird),
    can_fly(Bird).

bird_can_fly(Bird, no) :-
    bird(Bird),
    \+ can_fly(Bird).

